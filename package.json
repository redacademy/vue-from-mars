{
  "name": "vue-from-mars",
  "version": "1.0.0",
  "description": "A Vue.js-based theme for RED Academy's Mars blog.",
  "private": true,
  "dependencies": {
    "vue": "^1.0.24",
    "vue-resource": "^0.7.0",
    "vue-router": "^0.7.10"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.9.0",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^1.0.6",
    "gulp": "^3.9.1",
    "http-server": "^0.8.5",
    "node-sass": "^3.7.0",
    "uglify-js": "^2.5.0",
    "vue-hot-reload-api": "^1.2.2",
    "vueify": "^8.0.0",
    "vueify-insert-css": "^1.0.0",
    "watchify": "^3.4.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "scripts": {
    "dev": "watchify -vd -p browserify-hmr -e src/main.js -o dist/build.js",
    "build": "cross-env NODE_ENV=production browserify src/main.js | uglifyjs -c warnings=false -m > dist/build.js",
    "assets": "mkdir -p dist/assets && cp -r src/assets/images dist/assets/images && cp -r src/assets/css dist/assets/css"
  },
  "author": "mandiwise",
  "license": "GPL-2.0"
}
